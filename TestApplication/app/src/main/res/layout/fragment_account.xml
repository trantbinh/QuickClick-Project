<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#92FAB09E"
    tools:context=".fragment.AccountFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/topInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:padding="8sp"
            android:background="@color/orange"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:drawableLeft="@drawable/baseline_keyboard_backspace_24"
            />
        <TextView
            android:id="@+id/imageAcc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/topInfo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:drawablePadding="12sp"
            android:background="@drawable/lalala"
            android:layout_marginTop="45sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/topInfo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:drawablePadding="12sp"
            android:background="#8F000000"
            android:layout_marginTop="45sp"
            />

        <Button
            android:id="@+id/frag_btn_Login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="login"
            android:textSize="20sp"
            android:backgroundTint="@color/orange"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/glCenter"
            />

        <Button
            android:id="@+id/frag_btn_Signup"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="sign up"
            android:textSize="20sp"
            android:backgroundTint="@color/orange"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/glCenter"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>